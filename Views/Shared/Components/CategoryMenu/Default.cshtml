@model IEnumerable<Category>


<li class="dropdown">
    <a asp-controller="Movie"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Movies</a>
    <ul class="dropdown-menu">
        @foreach(var category in Model)
        {
            <li>
                <a asp-controller="Movie"
                   asp-action="List"
                   asp-route-category="@category.Name">@category.Name</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Movie" asp-action="List" asp-route-category="">View All</a>
        </li>
    </ul>
</li>